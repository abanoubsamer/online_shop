   <!-- FORM DATA-->
<div class="col-lg-12">
    <form id="myForm" action="/admin/manage/updata" method="post">
     <div class="card">
        <div class="card-header">CRUDS</div>
        <div class="card-body">
            <div class="card-title">
                <h3 class="text-center title-2">CRUDS</h3>
            </div>
            <hr>
            <div class="form-group">
                <label for="Product-Name" class="control-label mb-1">Product ID</label>
                <input type="text" id="Product-id" placeholder="ID" class="form-control" required/>
            </div>
            <div class="form-group">
                
                <label for="Product-Name" class="control-label mb-1">Product Name</label>
                <input type="text" id="Product-Name" placeholder="Name" class="form-control" required/>
                <% if (typeof errors !== 'undefined' && errors.text) { %>
                    <p class="text-danger"><%= errors.text %></p>
                <% } %>
            </div>
            <div class="form-group has-success">
                <label for="Email" class="control-label mb-1">Email</label>
                <input id="Email" name="cc-name" placeholder="Email" type="text" class="form-control cc-name valid" required>
                <label for="status" class="control-label mb-1">Status</label>
                <select id="status" class="form-control address-select" name="category" required>
                    <option value="">Please Select</option>
                    <option value="1">Order Processed</option>
                    <option value="2">Order Shipped</option>
                    <option value="3">Order En Route</option>
                    <option value="4">Order Arrived</option>
                </select>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="phone" class="control-label mb-1">Phone</label>
                        <input id="phone" name="cc-exp" type="tel" class="form-control cc-exp" placeholder="+20" required>
                    </div>
                </div>
                <div class="col-6">
                    <label for="Securitycode" class="control-label mb-1">Security code</label>
                    <div class="input-group">
                        <input id="Securitycode" name="x_card_code" type="tel" class="form-control cc-cvc" required>
                    </div>
                </div>
            </div>
            
            <div>  
                 <!-- Button to submit the form -->
                    <button onclick="updateData()"  type="submit" class="btn btn-lg btn-info btn-block">
                        <!-- Hidden input field to hold the data -->
                        <input type="hidden" id="newDataInput" name="newdata">
                        <i class="zmdi zmdi-mail-send"></i>&nbsp;
                        <span id="payment-button-amount">Save</span>
                    </button>
             </div>
          

        </div>
    </div>
</form>
</div>
<!-- END FORM DATA-->

        <!-- DATA TABLE-->
        <section  id="dataTableSection" class="p-t-20">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="title-5 m-b-35">data table</h3>
                        <div class="table-data__tool">
                                <div class="table-data__tool-left">
                                    <div class="rs-select2--light rs-select2--md">
                                        <select class="form-control address-select" name="property">
                                            <option selected="selected">All Properties</option>
                                            <option value="">Option 1</option>
                                            <option value="">Option 2</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                    <div class="rs-select2--light rs-select2--sm">
                                        <select class="form-control address-select" name="time">
                                            <option selected="selected">All</option>
                                            <option value="1">Today</option>
                                            <option value="2">2 Days</option>
                                            <option value="7">Week</option>
                                            <option value="30">Month</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                    <button class="au-btn-filter">
                                        <i class="zmdi zmdi-filter-list"></i>filters</button>
                                </div>
                            <form id="emailSearchForm" class="au-form-icon--sm">
                                <input id="emailSearchInput" class="au-input--w300 au-input--style2" type="text" placeholder="Search for Email">
                                <button id="emailSearchButton" class="au-btn--submit2" type="submit">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            
                            
                        </div>
                        <div class="table-responsive table-responsive-data2">
                            <table class="table table-data2">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="au-checkbox">
                                                <input type="checkbox">
                                                <span class="au-checkmark"></span>
                                            </label>
                                        </th>
                                        <th>email</th>
                                        <th>Phone</th>
                                        <th>Product Name</th>
                                        <th>date</th>
                                        <th>status</th>
                                        <th>Amount</th>
                                        <th>price</th>
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody id="ttable">
                                    <% if (orders) { %>
                                        <% for (let i = orders.length-1; i>0 ; i--) { %>
                                            <tr class="spacer"></tr>
                                            <tr class="tr-shadow">
                                            <td>
                                            <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                            </label>
                                            </td>
                                                                            
                                            <td>
                                            <span class="block-email"><%=orders[i].email%></span>
                                            </td>
                                            <td><span class="block-email"><%=orders[i].phone%></span></td>
                                            <td class="desc"><%=orders[i].productName%></td>
                                            <td><%=new Date(orders[i].orderDate).toLocaleString()%></td>
                                            <td>
                                                <% if (orders[i].status === 1) { %>
                                                    <span class="status--process">Processed</span>
                                                <% } else if (orders[i].status === 2) { %>
                                                    <span class="status--shipped">Shipped</span>
                                                <% } else if (orders[i].status === 3) { %>
                                                    <span class="status--route">Route</span>
                                                <% } else if (orders[i].status === 4) { %>
                                                    <span class="status--denied">Arrived</span>
                                                <% } %>
                                                
                                                
                                            </td> 
                                            <td><%=orders[i].productAmount%></td>
                                            <td>$<%=orders[i].productPrice%></td>
                                            <td>
                                            <div class="table-data-feature">
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Send">
                                            <i class="zmdi zmdi-mail-send"></i>
                                            </button>
                                            <button class="item" id="edit" onclick="editOrder('<%= JSON.stringify(orders[i]) %>')" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>
                                            <form action="/admin/manage/delete/<%=orders[i]._id%>" method="post">
                                                <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                              </button>
                                            </form>
                                                <button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                <i class="zmdi zmdi-more"></i>
                                            </button>
                                            </div>
                                        </td>
                                    </tr>
                                        <% } %>
                                        
                                        
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END DATA TABLE-->

