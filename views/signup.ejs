<%- include("parts/header") %>
<%- include("parts/nav") %>
<link rel="stylesheet" href="css/signup.css">


<div class="container" >
    <form class="row g-3" action="/signup" method="post">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <div class="mb-3">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input name="email" type="email" class="form-control" id="inputEmail4"required>
                        <% if (typeof errors !== 'undefined' && errors.email) { %>
                            <p class="text-danger"><%= errors.email %></p>
                        <% } %>
                    </div>
                    <div class="userinfo">
                        <label for="inputEmail4" class="form-label">First name</label>
                        <label for="inputEmail4" class="form-label" style="margin-right: 30%;">Last name</label>
                      </div>
                    <div class="userinfo"> 

                        <input name="firstname" type="text" class="form-control" id="inputEmail4"required style="width: 45%;">
                        <input name="lastname" type="text" class="form-control" id="inputEmail4"required  style="width: 45%;">
                        <% if (typeof errors !== 'undefined' && errors.text) { %>
                            <p class="text-danger"><%= errors.text %></p>
                        <% } %>
                    </div>  
                      
                    <div class="mb-3">
                        <label for="inputPassword4" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" id="inputPassword4" required>
                        <% if (typeof errors !== 'undefined' && errors.password) { %>
                            <p class="text-danger"><%= errors.password %></p>
                        <% } %>
                    </div>
                    <div class="mb-3">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input name="Address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="mb-3">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input name="Address2"type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="inputCity" class="form-label">City</label>
                            <input name="City"type="text" class="form-control" id="inputCity">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="inputState" class="form-label">State</label>
                            <select id="inputState" class="form-select">
                                <option selected>Choose...</option>
                                <option>...</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="inputZip" class="form-label">Zip</label>
                            <input type="text" class="form-control" id="inputZip">
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>

                    <% if (create_error) { %> <!-- Check if authError is defined -->
                        <br>
                        <div class="alert alert-danger"style="width: 100%;border-radius: 30px;display: flex;justify-content: center;align-items: center;padding: 5px 2px;">
                          <p><%= create_error %></p>      
                        </div>
                    <% } %> <!-- End of if statement -->

               
                        <br>
                        <% for(let result of validationResults) { %> <!-- Loop through each validationResult -->
                            <div class="alert alert-danger" style="width: 100%; border-radius: 30px; display: flex; justify-content: center; align-items: center; padding: 5px 2px;">
                                <p><%= result %></p> <!-- Display the error message -->
                            </div>
                        <% }; %> <!-- End of forEach loop -->
                        
                </div>
            </div>
        </div>
    </form>
</div>


<%- include("parts/footer") %>
